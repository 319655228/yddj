<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="117px"
            android:layout_height="214px"
            android:layout_alignLeft="@id/container_outer"
            android:layout_alignTop="@id/container_outer"
            android:background="@drawable/bg_doc_left_top" />

        <ImageView
            android:layout_width="17px"
            android:layout_height="208px"
            android:layout_alignTop="@id/container_outer"
            android:layout_alignRight="@id/container_outer"
            android:background="@drawable/bg_doc_right_top" />

        <ImageView
            android:layout_width="16px"
            android:layout_height="92px"
            android:layout_alignLeft="@id/container_outer"
            android:layout_alignBottom="@id/container_outer"
            android:background="@drawable/bg_doc_left_bot" />

        <ImageView
            android:layout_width="118px"
            android:layout_height="98px"
            android:layout_alignRight="@id/container_outer"
            android:layout_alignBottom="@id/container_outer"
            android:background="@drawable/bg_doc_right_bot" />

        <LinearLayout
            android:id="@+id/container_outer"
            android:layout_width="825px"
            android:layout_height="750px"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="15px">

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="790px"
                android:layout_height="152px"
                android:layout_marginTop="30px"
                android:background="@drawable/bg_item_classify"
                android:gravity="center|left"
                android:paddingLeft="90px"
                android:paddingBottom="12px"
                android:text="视频"
                android:textColor="@color/colorWhite"
                android:textSize="45px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_meeting"
                android:layout_width="790px"
                android:layout_height="152px"
                android:layout_marginTop="30px"
                android:background="@drawable/bg_item_classify"
                android:gravity="center|left"
                android:paddingLeft="90px"
                android:paddingBottom="12px"
                android:text="会议"
                android:textColor="@color/colorWhite"
                android:textSize="45px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_document"
                android:layout_width="790px"
                android:layout_height="152px"
                android:layout_marginTop="30px"
                android:background="@drawable/bg_item_classify"
                android:gravity="center|left"
                android:paddingLeft="90px"
                android:paddingBottom="12px"
                android:text="公文"
                android:textColor="@color/colorWhite"
                android:textSize="45px"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_inner_title"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_below="@id/rv_list"
            android:layout_marginLeft="137px"
            android:layout_marginTop="100px"
            android:layout_marginRight="137px"
            android:layout_marginBottom="10px"
            android:background="@drawable/bg_crumbs"
            android:gravity="center|left"
            android:paddingLeft="32px"
            android:textColor="@color/colorWhite"
            android:textSize="30px" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inner"
            android:layout_width="809px"
            android:layout_height="1074px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_rvlist"
            android:paddingTop="85px"
            android:paddingBottom="77px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_chevron_left_white_24dp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="200px"
            android:src="@drawable/ic_close_black_24dp" />
    </LinearLayout>
</LinearLayout>
