<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_yddx"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/include_header"
        layout="@layout/include_header" />

    <include
        layout="@layout/include_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_common_title"
        android:layout_below="@id/include_header"
        android:text="考核模式" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_check_party"
            style="@style/tv_fh_item"
            android:text="党建知识互动" />

        <TextView
            android:id="@+id/tv_check_mental"
            style="@style/tv_fh_item"
            android:layout_marginTop="18px"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="337px"
            android:layout_marginTop="18px"
            android:background="@color/colorLightOrange"
            android:gravity="center"
            android:text=""
            android:textColor="#CCCCCC"
            android:textSize="60px"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>