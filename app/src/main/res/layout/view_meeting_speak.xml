<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:background="@drawable/bg_meeting_speak"
    android:orientation="horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lv_data"
        android:layout_marginTop="70px"
        android:layout_marginBottom="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/btn_pre"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_margin="9px"
        android:layout_alignTop="@id/lv_data"
        android:layout_alignRight="@id/lv_data"
        android:background="@drawable/bg_scroll_top_enable" />

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_margin="9px"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_scroll_bottom_enable" />
</RelativeLayout>