<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="712px"
            android:layout_height="202px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_shyk_title"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="375px"
                android:layout_height="107px"
                android:background="@drawable/bg_khms_title" />

            <ImageView
                android:layout_width="107px"
                android:layout_height="107px"
                android:layout_alignLeft="@id/iv_title"
                android:layout_marginLeft="-130px"
                android:background="@drawable/img_dh" />

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="235px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_bot_circle" />

        <ImageView
            android:id="@+id/menu_back"
            android:layout_width="410px"
            android:layout_height="171px"
            android:layout_above="@id/iv_bot_circle"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_bot_back" />

        <ImageView
            android:id="@+id/iv_bot_circle"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_bot_2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_djzshd"
                android:layout_width="278px"
                android:layout_height="190px"
                android:src="@drawable/menu_djzshd" />

            <ImageView
                android:id="@+id/menu_ghtj"
                android:layout_width="278px"
                android:layout_height="192px"
                android:layout_marginTop="20px"
                android:src="@drawable/menu_gzryghtj" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
