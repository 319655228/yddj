<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_bottom"
        android:layout_marginBottom="30px">

        <ImageView
            android:layout_width="117px"
            android:layout_height="214px"
            android:layout_alignLeft="@id/rv_data"
            android:layout_alignTop="@id/rv_data"
            android:background="@drawable/bg_doc_left_top" />

        <ImageView
            android:layout_width="17px"
            android:layout_height="208px"
            android:layout_alignTop="@id/rv_data"
            android:layout_alignRight="@id/rv_data"
            android:background="@drawable/bg_doc_right_top" />

        <ImageView
            android:layout_width="16px"
            android:layout_height="92px"
            android:layout_alignLeft="@id/rv_data"
            android:layout_alignBottom="@id/rv_data"
            android:background="@drawable/bg_doc_left_bot" />

        <ImageView
            android:layout_width="118px"
            android:layout_height="98px"
            android:layout_alignRight="@id/rv_data"
            android:layout_alignBottom="@id/rv_data"
            android:background="@drawable/bg_doc_right_bot" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_data"
            android:layout_width="825px"
            android:layout_height="1006px"
            android:layout_centerHorizontal="true"
            android:overScrollMode="never"
            android:paddingLeft="15px"
            android:paddingTop="25px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/rv_data"
            android:layout_alignBottom="@id/rv_data"
            android:layout_marginRight="20px"
            android:layout_marginBottom="20px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_previous"
                android:layout_width="80px"
                android:layout_height="36dp"
                android:background="@drawable/bg_pre" />

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="25px"
                android:background="@drawable/bg_next" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="271px"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="235px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_bot_circle" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="410px"
            android:layout_height="171px"
            android:layout_above="@id/iv_bot_circle"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_bot_back2" />

        <ImageView
            android:id="@+id/iv_bot_circle"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_bot_2" />
    </RelativeLayout>

</RelativeLayout>