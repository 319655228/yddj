<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="705px"
        android:layout_height="200px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:background="@drawable/bg_meeting_spsegment"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="当前环节：扫码参会"
            android:textColor="@color/colorWhite"
            android:textSize="45px" />

    </RelativeLayout>

    <com.hckj.yddxst.widget.QrcodeImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="390px"
        android:layout_height="390px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="610px"
        app:iv_height="356px"
        app:iv_width="356px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_qrcode"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:text="请使用微信扫描二维码，进入问卷。"
        android:textColor="@color/colorWhite"
        android:textSize="30px" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bot_circle"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/btn_return"
            android:layout_width="416px"
            android:layout_height="130px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_bot_back3" />

    </RelativeLayout>

</RelativeLayout>
